#:kivy 1.10.0

<clockFace>

	time: time_lbl
	hour: hourtxt
	minute: minutetxt
	second: secondtxt

	FloatLayout:

		canvas:

			Color:
				rgba: 0.988, 0.557, 0.510, 1
			Rectangle:
				pos: self.pos
				size: self.size

		Label:
			id: time_lbl
			font_size: 70
			pos_hint: {'center_x': 0.5, 'center_y': 0.8}
			text:"Time"
			color: 1, 1, 1, 1

		Button:
			text: "Set Alarm"
			background_color: 0, 0, 1, 1
			font_size: 40
			pos_hint: {'center_x': 0.3, 'center_y': 0.2}
			size_hint: .2, .1
			on_press: 
				root.setAlarm()

		Button:
			text: "Stop Alarm"
			background_color: 0, 0, 1, 1
			font_size: 40
			pos_hint: {'center_x': 0.7, 'center_y': 0.2}
			size_hint: .2, .1
			on_press: 
				root.stopAlarm()
		
		TextInput:
			id:hourtxt   
			text: ''
			hint_text: 'Alarm Hour'
			pos_hint: {'center_x': 0.2, 'center_y': 0.4}
			size_hint: .1, .1

		TextInput:
			id:minutetxt   
			text: ''
			hint_text: 'Alarm Minute'
			pos_hint: {'center_x': 0.5, 'center_y': 0.4}
			size_hint: .1, .1

		TextInput:
			id:secondtxt   
			text: ''
			hint_text: 'Alarm Second'
			pos_hint: {'center_x': 0.8, 'center_y': 0.4}
			size_hint: .1, .1